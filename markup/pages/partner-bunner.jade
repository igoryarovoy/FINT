doctype html
html(class="no-js", lang="ru")

    include ../components/head/head
    include ../components/header/header
    include ../components/side-nav/side-nav
    include ../components/top-panel/top-panel   
    include ../components/bot-panel/bot-panel   
    include ../components/footer/footer
    include ../components/includeJs/includeJs

    head
        +head(head.defaults)
    body.has-panel
        |%=symbols=%
        .c-modal(id='modal-form')
            .c-modal__dialog
                .c-modal__content
                    span.c-modal__close(data-dismiss="modal")
                    .head-2.c-modal__head Зарегистрировать свой магазин в Idilia.com.ua
                    .c-form-g
                        .c-form-label <span>*</span>Название магазина
                        input(type="text").c-form-control
                    .c-form-g
                        .c-form-label <span>*</span>Контактное лицо
                        input(type="text").c-form-control
                    .c-form-g
                        .c-form-label <span>*</span>Телефоны
                        input(type="text").c-form-control
                    .c-form-g
                        .c-form-label <span>*</span>Ваш e-mail
                        input(type="text").c-form-control
                    .c-form-g
                        .c-form-label Другие контакты
                        .o-grid
                            .o-grid__xs-4
                                select.c-form-control
                                    option skype
                                    option ICQ
                                    option AIM
                            .o-grid__xs-8
                                input(type="text").c-form-control
                    .c-form-g
                        .c-form-label Дополнительные вопросы:
                        textarea.c-form-control(rows='3')
                    button(type='submit').c-btn.c-btn--success.c-btn--raised Зарегестрировать
        .o-wrapper
            +header()   
            +top-panel('u-hide-xs')
            .o-section
                .o-center
                    .o-grid
                        .o-grid__xs-lnd-4.o-grid__md-2
                            +sideNav()
                        .o-grid__xs-lnd-8.o-grid__md-10
                            .o-section
                                .o-hgroup
                                    h1.head-1 Баннерная реклама на страницах Idilia.com.ua
                                .head-3 Пример размещения:
                                .o-grid.u-mb-20
                                    .o-grid__xs-lnd-7
                                        img(src="static/img/content/banners_1.jpg", alt="").c-img-resp.u-mb-10
                                    .o-grid__xs-lnd-5
                                        img(src="static/img/content/banners_2.jpg", alt="").c-img-resp.u-mb-10
                                table.c-table-content
                                    tr
                                        th Размер
                                        th Позиция
                                        th.u-text-center Стоимость размещения, грн/1000 показов (CPM)
                                    tr
                                        td 250х725
                                        td главная страница
                                        td.u-text-center 85
                                    tr
                                        td 250х725
                                        td главная страница
                                        td.u-text-center 85
                                    tr
                                        td 250х725
                                        td главная страница
                                        td.u-text-center 85
                                    tr
                                        td 250х725
                                        td главная страница
                                        td.u-text-center 85
                                .head-3 Наценки за использование RichMedia форматов
                                table.c-table-content
                                    tr
                                        th Формат
                                        th размещение
                                        th.u-text-center Цена за 1000 показов, грн
                                    tr
                                        td ScreenGlide
                                        td динамика
                                        td.u-text-center 50% к стоимости баннера
                                    tr
                                        td ScreenGlide
                                        td динамика
                                        td.u-text-center 50% к стоимости баннера
                                    tr
                                        td ScreenGlide
                                        td динамика
